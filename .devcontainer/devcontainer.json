{
  "name": "PMS Project Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000, 8000],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "8000": {
      "label": "API",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
 
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "github.copilot"
      ]
    }
  }
}
